<?xml version="1.0" encoding="utf-8" ?>
<Suite Category="Business Intelligence" RequireVersion="9.5.4" Title="Google BigQuery" Id="GoogleBigQuery" LoginButton="https://seotoolsforexcel.com/logins/google.png" SourceUrl="https://github.com/nielsbosma/SeoTools-for-Excel-Connectors/blob/master/GoogleBigQuery.xml" HelpUrl="http://seotoolsforexcel.com/google-bigquery/" HelpText="Documentation">

  <Author Name="Niels Bosma" Url="https://se.linkedin.com/in/bosmaniels"/>

  <GoogleOAuth2Authenticator ClientId="" ClientSecret="" Scope="https://www.googleapis.com/auth/bigquery" StayAuthenticated="true"/>

  <Resources>
    <Resource Id="Fail">
      <Fail>
        <JsonPath Expr="error.errors[0].message"/>
      </Fail>
    </Resource>
  </Resources>

  <RestConnector Id="Projects" Hidden="true">
    <Parameters>
    </Parameters>
    <Fetch Url="https://www.googleapis.com/bigquery/v2/projects">
      <HttpSettings>
        <RequestHeaders>
          <Header Name='Authorization'><![CDATA[Bearer @(Model.Authenticator.AccessToken)]]></Header>
        </RequestHeaders>
      </HttpSettings>
    </Fetch>
    <Parse>
      <JsonPath Expr="$.projects[*]">
        <JsonPath Expr="projectReference.projectId" Id="Id" Title="Project Id"/>
        <JsonPath Expr="friendlyName" Id="Name" Title="Project"/>
      </JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="Datasets" Hidden="true">
    <Parameters>
      <Text Id="Project" Select.Connector="Projects"/>
    </Parameters>
    <Fetch Url="https://www.googleapis.com/bigquery/v2/projects/@(Model.Project)/datasets">
      <HttpSettings>
        <RequestHeaders>
          <Header Name='Authorization'><![CDATA[Bearer @(Model.Authenticator.AccessToken)]]></Header>
        </RequestHeaders>
      </HttpSettings>
    </Fetch>
    <Parse>
      <JsonPath Expr="$.datasets[*]">
        <JsonPath Expr="datasetReference.datasetId" Id="Id" Title="Dataset Id"/>
        <JsonPath Expr="id" Id="Name" Title="Dataset"/>
      </JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="Tables" Title="Tables" Hidden="true">
    <Parameters>
      <Text Id="Project" Select.Connector="Projects"/>
      <Text Id="Dataset" Select.Connector="Datasets"/>
    </Parameters>
    <Fetch Url="https://www.googleapis.com/bigquery/v2/projects/@(Model.Project)/datasets/@(Model.Dataset)/tables">
      <HttpSettings>
        <RequestHeaders>
          <Header Name='Authorization'><![CDATA[Bearer @(Model.Authenticator.AccessToken)]]></Header>
        </RequestHeaders>
      </HttpSettings>
    </Fetch>
    <Parse>
      <JsonPath Expr="$.tables[*]">
        <JsonPath Expr="id" Id="Id" Title="Id"/>
        <JsonPath Expr="tableReference.tableId" Id="Name" Title="Name" />
      </JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="Query Table" Title="Query Table">
    <Parameters>
      <Text Id="Project" Title="Project" Required="true" Select.Connector="Projects"/>
      <Text Id="Dataset" Title="Dataset" Required="true" Select.Connector="Datasets" Parent.Id="Project" Parent.Label="Project"/>
      <Text Id="Table" Title="Table" Required="true" Select.Connector="Tables" Parent.Id="Dataset" Parent.Label="Dataset"/>
      <Number Id="Limit" Title="Limit" DefaultValue="10"/>
    </Parameters>
    <Fetch Url="https://www.googleapis.com/bigquery/v2/projects/@(Model.Project)/queries">
      <HttpSettings>
        <RequestHeaders>
          <Header Name='Authorization'><![CDATA[Bearer @(Model.Authenticator.AccessToken)]]></Header>
        </RequestHeaders>
        <RequestMethod>POST</RequestMethod>
        <RequestContentType>application/json</RequestContentType>
        <RequestBody>
          {
          "query": "SELECT * FROM [@Model.Table] LIMIT @Model.Limit",
          "defaultDataset": {
            "datasetId": "@Model.Dataset"
            }
          }
        </RequestBody>
      </HttpSettings>
    </Fetch>
    <Parse>
      <Table>
        <JsonPath Id='Headers' Expr="$.schema.fields[*]">
          <JsonPath Expr="name"/>
        </JsonPath>
        <JsonPath Id='Converters' Expr="$.schema.fields[*]">
          <JsonPath Expr="type"/>
        </JsonPath>
        <JsonPath Id='Cells' Expr='$.rows..f[*]'>
          <JsonPath Expr="v"/>
        </JsonPath>
      </Table>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="Query" Title="Query">
    <Parameters>
      <Text Id="Project" Title="Project" Required="true" Select.Connector="Projects"/>
      <Text Id="Dataset" Title="Dataset" Required="true" Select.Connector="Datasets" Parent.Id="Project" Parent.Label="Project"/>
      <Text Id="Query" Title="Query" Multiline="true"/>
    </Parameters>
    <Fetch Url="https://www.googleapis.com/bigquery/v2/projects/@(Model.Project)/queries">
      <HttpSettings>
        <RequestHeaders>
          <Header Name='Authorization'><![CDATA[Bearer @(Model.Authenticator.AccessToken)]]></Header>
        </RequestHeaders>
        <RequestMethod>POST</RequestMethod>
        <RequestContentType>application/json</RequestContentType>
        <RequestBody>
          {
            "query": "@Model.Query",
            "defaultDataset": {
              "datasetId": "@Model.Dataset"
            }
          }
        </RequestBody>
      </HttpSettings>
    </Fetch>
    <Parse>
      <Table>
        <JsonPath Id='Headers' Expr="$.schema.fields[*]">
          <JsonPath Expr="name"/>
        </JsonPath>
        <JsonPath Id='Converters' Expr="$.schema.fields[*]">
          <JsonPath Expr="type"/>
        </JsonPath>
        <JsonPath Id='Cells' Expr="$.rows..f[*]">
          <JsonPath Expr="v"/>
        </JsonPath>
      </Table>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

</Suite>
