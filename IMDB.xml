			<![CDATA[
        http://www.imdb.com/title/@(Model.Id)/reviews?sort=@(Model.Sorting)&dir=@(Model.Direction)
      ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
      <XPath Expr="//div[@@class='lister-item-content']">
        <XPath Expr="a" Title="Title" Id="Title" Converter="String"/>
