     </Parameters>
    <Fetch>
      <Fetch.Url>
			<![CDATA[
        http://www.imdb.com/title/@(Model.Id)/releaseinfo#akas
      ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
      <XPath Expr="//table[contains(@@class, 'akas-table')]/tr">
        <XPath Expr="td[1]" Title="Region" Id="Region" Converter="String"/>
