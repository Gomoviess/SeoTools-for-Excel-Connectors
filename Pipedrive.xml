        @(Model.PinnedDeal != "All" ? "&pinned_to_deal_flag=" + Model.PinnedDeal : "")
        @(Model.PinnedOrg != "All" ? "&pinned_to_organization_flag=" + Model.PinnedOrg : "")
        @(Model.PinnedContact != "All" ? "&pinned_to_person_flag=" + Model.PinnedContact : "")
