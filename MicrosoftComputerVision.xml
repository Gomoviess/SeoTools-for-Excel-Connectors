<?xml version="1.0" encoding="utf-8" ?>
<Suite Category="Image Recognition" Title="Microsoft Computer Vision" Id="MicrosoftComputerVision" RequireVersion="8.2" SourceUrl="https://github.com/nielsbosma/SeoTools-for-Excel-Connectors/blob/master/MicrosoftComputerVision.xml" HelpUrl="http://seotoolsforexcel.com/ms-computer-vision/" HelpText="Documentation">

  <Author Name="Victor Sandberg" Url="http://community.seotoolsforexcel.com/users/diskborste/activity" />

  <Settings HelpText="What's this?" HelpUrl="http://seotoolsforexcel.com/ms-computer-vision">
    <Text Id="Key" Title="Key" Required="true" HelpUrl="http://seotoolsforexcel.com/ms-computer-vision"/>
    <Select Id="Location" Title="Location" DefaultValue="westus" HelpUrl="http://seotoolsforexcel.com/ms-computer-vision">
      <DataSource>
			<Item Id="westus" Title="West US"/>
			<Item Id="westus2" Title="West US 2"/>
			<Item Id="eastus" Title="East US"/>
			<Item Id="eastus2" Title="East US 2"/>
			<Item Id="westcentralus" Title="West Central US"/>
			<Item Id="southcentralus" Title="South Central US"/>
			<Item Id="westeurope" Title="West Europe"/>
			<Item Id="northeurope" Title="North Europe"/>
			<Item Id="southeastasia" Title="Southeast Asia"/>
			<Item Id="eastasia" Title="East Asia"/>
			<Item Id="australiaeast" Title="Australia East"/>
			<Item Id="brazilsouth" Title="Brazil South"/>
			<Item Id="canadacentral" Title="Canada Central"/>
			<Item Id="centralindia" Title="Central India"/>
			<Item Id="uksouth" Title="UK South"/>
			<Item Id="japaneast" Title="Japan East"/>
      </DataSource>
    </Select>
  </Settings>

  <Resources>
    <Resource Id="Fail">
			<Fail>
				<JsonPath Expr="message"/>
			</Fail>
    </Resource>
    <Resource Id="HttpSettings">
			<HttpSettings>
        <IntervalBetweenRequests RandomFrom="@(Model.Delay)" RandomTo="@(Model.Delay)" IfSame="Host"/>
        <RequestMethod>POST</RequestMethod>
        <RequestContentType>application/json</RequestContentType>
        <RequestHeaders>
          <Header Name='Ocp-Apim-Subscription-Key'>@Model.Key</Header>
        </RequestHeaders>
        <RequestBody>
					{
						"url": "@(Model.Image)"
					}
        </RequestBody>
      </HttpSettings>
    </Resource>
  </Resources>

  <RestConnector Id="Categories" Title="Categories" HelpText="Categorizes image content according to a taxonomy." HelpUrl="https://westus.dev.cognitive.microsoft.com/docs/services/5adf991815e1060e6355ad44/operations/56f91f2e778daf14a499e1fa">
    <Parameters>
      <Text Id="Image" Title="Image URL" Debug.DefaultValue="https://pbs.twimg.com/profile_images/874276197357596672/kUuht00m_400x400.jpg" Required="true"/>
      <Checkbox Id="Multi" Title="Return Multiple Results" DefaultValue="false"/>
      <Number Id="Delay" Title="Delay" DefaultValue="0" Minimum="0" Maximum="20000" Required="false"/>
    </Parameters>
    <Fetch>
      <Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
        https://@(Model.Location).api.cognitive.microsoft.com/vision/v2.0/analyze?visualFeatures=categories
				]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="$.categories[@(Getquery())]">
				<JsonPath Expr="name" Id="Category" Title="Category" Converter="String"/>
				<JsonPath Expr="score" Id="Score" Title="Score" Converter="Double"/>
			</JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="Tags" Title="Tags" HelpText="Detailed list of words related to the image content." HelpUrl="https://westus.dev.cognitive.microsoft.com/docs/services/5adf991815e1060e6355ad44/operations/56f91f2e778daf14a499e1fa">
    <Parameters>
      <Text Id="Image" Title="Image URL" Debug.DefaultValue="https://pbs.twimg.com/profile_images/874276197357596672/kUuht00m_400x400.jpg" Required="true"/>
      <Number Id="Delay" Title="Delay" DefaultValue="0" Minimum="0" Maximum="20000" Required="false"/>
    </Parameters>
    <Fetch>
      <Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
        https://@(Model.Location).api.cognitive.microsoft.com/vision/v2.0/analyze?visualFeatures=tags
				]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="$.tags[*]">
				<JsonPath Expr="name" Id="Tag" Title="Tag" Converter="String"/>
				<JsonPath Expr="confidence" Id="Confidence" Title="Confidence" Converter="Double"/>
			</JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="Description" Title="Description" HelpText="Describes the image content with a complete sentence." HelpUrl="https://westus.dev.cognitive.microsoft.com/docs/services/5adf991815e1060e6355ad44/operations/56f91f2e778daf14a499e1fa">
    <Parameters>
      <Text Id="Image" Title="Image URL" Debug.DefaultValue="https://pbs.twimg.com/profile_images/874276197357596672/kUuht00m_400x400.jpg" Required="true"/>
      <Number Id="Delay" Title="Delay" DefaultValue="0" Minimum="0" Maximum="20000" Required="false"/>
    </Parameters>
    <Fetch>
      <Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
        https://@(Model.Location).api.cognitive.microsoft.com/vision/v2.0/analyze?visualFeatures=description
				]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="$.description.captions[0]">
				<JsonPath Expr="text" Id="Text" Title="Text" Converter="String"/>
				<JsonPath Expr="confidence" Id="Confidence" Title="Confidence" Converter="Double"/>
			</JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="Faces" Title="Faces" HelpText="Detects if faces are present. If present, generate gender and age." HelpUrl="https://westus.dev.cognitive.microsoft.com/docs/services/5adf991815e1060e6355ad44/operations/56f91f2e778daf14a499e1fa">
    <Parameters>
      <Text Id="Image" Title="Image URL" Debug.DefaultValue="https://pbs.twimg.com/profile_images/874276197357596672/kUuht00m_400x400.jpg" Required="true"/>
      <Checkbox Id="Multi" Title="Return Multiple Results" DefaultValue="false"/>
      <Number Id="Delay" Title="Delay" DefaultValue="0" Minimum="0" Maximum="20000" Required="false"/>
    </Parameters>
    <Fetch>
      <Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
        https://@(Model.Location).api.cognitive.microsoft.com/vision/v2.0/analyze?visualFeatures=faces
				]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="$.faces[@(Getquery())]">
				<JsonPath Expr="gender" Id="Gender" Title="Gender" Converter="String"/>
				<JsonPath Expr="age" Id="Age" Title="Age" Converter="Long"/>
			</JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="Colors" Title="Colors" HelpText="Determines the accent color, dominant color, and whether an image is black/white." HelpUrl="https://westus.dev.cognitive.microsoft.com/docs/services/5adf991815e1060e6355ad44/operations/56f91f2e778daf14a499e1fa">
    <Parameters>
      <Text Id="Image" Title="Image URL" Debug.DefaultValue="https://pbs.twimg.com/profile_images/874276197357596672/kUuht00m_400x400.jpg" Required="true"/>
      <Number Id="Delay" Title="Delay" DefaultValue="0" Minimum="0" Maximum="20000" Required="false"/>
    </Parameters>
    <Fetch>
      <Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
        https://@(Model.Location).api.cognitive.microsoft.com/vision/v2.0/analyze?visualFeatures=color
				]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="$.color">
				<JsonPath Expr="dominantColorForeground" Id="Foreground" Title="Foreground" Converter="String"/>
				<JsonPath Expr="dominantColorBackground" Id="Background" Title="Background" Converter="String"/>
				<JsonPath Expr="accentColor" Id="Accent" Title="Accent" Converter="String"/>
				<JsonPath Expr="isBwImg" Id="BW" Title="BW" Converter="Bool"/>
			</JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="Adult" Title="Adult" HelpText="Detects if the image is pornographic in nature. Sexually suggestive content is also detected." HelpUrl="https://westus.dev.cognitive.microsoft.com/docs/services/5adf991815e1060e6355ad44/operations/56f91f2e778daf14a499e1fa">
    <Parameters>
      <Text Id="Image" Title="Image URL" Debug.DefaultValue="https://pbs.twimg.com/profile_images/874276197357596672/kUuht00m_400x400.jpg" Required="true"/>
      <Number Id="Delay" Title="Delay" DefaultValue="0" Minimum="0" Maximum="20000" Required="false"/>
    </Parameters>
    <Fetch>
      <Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
        https://@(Model.Location).api.cognitive.microsoft.com/vision/v2.0/analyze?visualFeatures=adult
				]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="$.adult">
				<JsonPath Expr="isAdultContent" Id="Adult" Title="Adult" Converter="Bool"/>
				<JsonPath Expr="adultScore" Id="AdultScore" Title="Adult Score" Converter="Double"/>
				<JsonPath Expr="isRacyContent" Id="Racy" Title="Racy" Converter="Bool"/>
				<JsonPath Expr="racyScore" Id="RacyScore" Title="Racy Score" Converter="Double"/>
			</JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

  <RestConnector Id="Celebrities" Title="Celebrities" HelpText="Identifies celebrities if detected in the image." HelpUrl="https://westus.dev.cognitive.microsoft.com/docs/services/5adf991815e1060e6355ad44/operations/56f91f2e778daf14a499e1fa">
    <Parameters>
      <Text Id="Image" Title="Image URL" Debug.DefaultValue="https://s.newsweek.com/sites/www.newsweek.com/files/styles/lg/public/2016/04/12/0412trumpclintonmissouri.jpg" Required="true"/>
      <Checkbox Id="Multi" Title="Return Multiple Results" DefaultValue="false"/>
      <Number Id="Delay" Title="Delay" DefaultValue="0" Minimum="0" Maximum="20000" Required="false"/>
		</Parameters>
    <Fetch>
      <Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
        https://@(Model.Location).api.cognitive.microsoft.com/vision/v2.0/analyze?details=celebrities
				]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="$.categories[0].detail.celebrities[@(Getquery())]">
				<JsonPath Expr="name" Id="Celebrity" Title="Celebrity" Converter="String"/>
				<JsonPath Expr="confidence" Id="Confidence" Title="Confidence" Converter="Double"/>
			</JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>
	
  <RestConnector Id="Brands" Title="Brands" HelpText="Detects various brands within an image." HelpUrl="https://westus.dev.cognitive.microsoft.com/docs/services/5adf991815e1060e6355ad44/operations/56f91f2e778daf14a499e1fa">
    <Parameters>
      <Text Id="Image" Title="Image URL" Debug.DefaultValue="https://miro.medium.com/max/3264/1*LAkKic9Q1xZ0_ZOPNrI4Xg.jpeg" Required="true"/>
      <Checkbox Id="Multi" Title="Return Multiple Results" DefaultValue="false"/>
      <Number Id="Delay" Title="Delay" DefaultValue="0" Minimum="0" Maximum="20000" Required="false"/>
		</Parameters>
    <Fetch>
      <Resource Id="HttpSettings"/>
      <Fetch.Url>
        <![CDATA[
        https://@(Model.Location).api.cognitive.microsoft.com/vision/v2.0/analyze?visualFeatures=brands
				]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
			<JsonPath Expr="$.brands[@(Getquery())]">
				<JsonPath Expr="name" Id="Brand" Title="Brand" Converter="String"/>
				<JsonPath Expr="confidence" Id="Confidence" Title="Confidence" Converter="Double"/>
			</JsonPath>
    </Parse>
    <Resource Id="Fail"/>
  </RestConnector>

  <RazorFunctions>
		<![CDATA[
		string Getquery() {
			return (Model.Multi == true) ? "*" : "0";
		}
		]]>
  </RazorFunctions>

</Suite>
